# Model Queue Configuration
MODEL_QUEUES_COUNT=3  # Number of model queues/instances to run

# FastAPI settings
DEBUG=True
HOST=0.0.0.0
PORT=8001

# CORS Configuration (comma-separated list of allowed origins, leave empty for development defaults)
# For development: leave empty or set DEBUG=True to allow all origins
# For production: specify exact origins like "https://example.com,https://app.example.com"
CORS_ORIGINS=

# ChromaDB settings
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./chroma_data

# CAS Authentication
CAS_SERVER_URL=https://login.iiit.ac.in/cas
CAS_SERVICE_URL=http://localhost:8001
CAS_VERSION=3

# Ollama settings (for chat/summarization)
OLLAMA_BASE_URL=http://localhost:8000
OLLAMA_CHAT_MODEL=google/gemma-3-270m

# Embedding model settings (using Hugging Face)
EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B
EMBEDDING_DEVICE=auto
EMBEDDING_TRUST_REMOTE_CODE=true
EMBEDDING_FORCE_CPU=1

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_data

# Search Configuration
RELEVANCE_THRESHOLD=0.5  # Distance threshold for including search results (0.0-1.0, lower = more strict)

# Model settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# File upload settings
MAX_FILE_SIZE=50000000  # 50MB
ALLOWED_EXTENSIONS=.pdf,.txt,.doc,.docx

# Admin settings
ADMIN_USERS=admin@iiit.ac.in,super@iiit.ac.in
