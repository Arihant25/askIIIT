"""
Environment configuration and settings for load testing.
Copy this file to .env and modify values as needed.
"""

# Backend Configuration
LOAD_TEST_BASE_URL=http://localhost:8000
LOAD_TEST_FRONTEND_URL=http://localhost:3000

# Authentication Configuration
LOAD_TEST_AUTH_TOKEN=authenticated
LOAD_TEST_ADMIN_USERS=admin@iiit.ac.in,arihant@iiit.ac.in
LOAD_TEST_USERS=testuser1@iiit.ac.in,testuser2@iiit.ac.in,student@iiit.ac.in,faculty@iiit.ac.in

# Load Testing Parameters
LOAD_TEST_MIN_WAIT=1000
LOAD_TEST_MAX_WAIT=3000
LOAD_TEST_SPAWN_RATE=2
LOAD_TEST_DEFAULT_USERS=10
LOAD_TEST_DEFAULT_DURATION=300

# Test Data Configuration
LOAD_TEST_MAX_QUERY_LENGTH=200
LOAD_TEST_MAX_MESSAGE_LENGTH=500

# Performance Thresholds
LOAD_TEST_HEALTH_TIMEOUT=200
LOAD_TEST_SEARCH_TIMEOUT=5000
LOAD_TEST_CHAT_TIMEOUT=15000
LOAD_TEST_SUCCESS_RATE_THRESHOLD=95

# Stress Testing Configuration
LOAD_TEST_MAX_CONCURRENT=100
LOAD_TEST_STRESS_DURATION=300

# Streaming Testing Configuration
LOAD_TEST_STREAMING_TIMEOUT=60
LOAD_TEST_MAX_STREAMING_CONCURRENT=10

# Monitoring Configuration
LOAD_TEST_MEMORY_LEAK_THRESHOLD=500
LOAD_TEST_CPU_THRESHOLD=80
LOAD_TEST_ENABLE_MONITORING=true

# Report Configuration
LOAD_TEST_REPORT_FORMAT=json
LOAD_TEST_GENERATE_HTML=true
LOAD_TEST_SAVE_RAW_DATA=true

# Database Configuration (for test data)
LOAD_TEST_USE_REAL_DATA=false
LOAD_TEST_MOCK_DOCUMENTS=true

# Logging Configuration
LOAD_TEST_LOG_LEVEL=INFO
LOAD_TEST_LOG_FILE=load_tests.log
LOAD_TEST_VERBOSE=false
